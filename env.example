# Environment Variables for CamRooms
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE (PostgreSQL - Railway provides this)
# ===========================================
# Get this from Railway after adding PostgreSQL service
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# ===========================================
# DISCORD OAUTH
# ===========================================
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID="your_discord_client_id"
DISCORD_CLIENT_SECRET="your_discord_client_secret"

# ===========================================
# NEXTAUTH
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="generate_a_random_secret_here_use_openssl"

# ===========================================
# IRC (Optional overrides)
# ===========================================
IRC_HOST="irc.gamesurge.net"
IRC_PORT="6667"

# ===========================================
# RAILWAY (Deployment webhooks & build logs)
# ===========================================
# Secret for deploy webhook authentication
DEPLOY_WEBHOOK_SECRET="your_webhook_secret"
# API Token for build log streaming (get from https://railway.com/account/tokens)
RAILWAY_API_TOKEN="your_railway_api_token"
