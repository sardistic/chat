// Prisma Schema for CamRooms User Management
// Using PostgreSQL for production scalability

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth.js Required Models
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// User Model (Extended for CamRooms)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?   // Discord avatar URL or generated avatar

  // CamRooms Custom Fields
  displayName   String?               // Editable display name
  avatarSeed    Int?                  // Seed for generated avatar
  avatarUrl     String?               // Custom avatar URL
  role          Role      @default(USER)
  isBanned      Boolean   @default(false)
  isShadowMuted Boolean   @default(false)  // Mod action: messages only visible to mods
  banReason     String?
  banExpires    DateTime?

  // Discord-specific
  discordId     String?   @unique
  discordTag    String?               // e.g., "username#1234"

  // Guest tracking
  isGuest       Boolean   @default(false)
  guestToken    String?   @unique     // Cookie-based identifier for guests
  ipAddress     String?               // For guest association

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastSeen      DateTime  @default(now())

  // Relations
  accounts      Account[]
  sessions      Session[]
  stats         UserStats?
  
  // Core Systems
  settings      UserSettings?
  blocks        Block[]       @relation("Blocks")
  blockedBy     Block[]       @relation("BlockedBy")
  mutes         Mute[]        @relation("Mutes")
  mutedBy       Mute[]        @relation("MutedBy")
  messageReactions MessageReaction[]

  @@index([discordId])
  @@index([guestToken])
  @@index([role])
}

model UserStats {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  chatPoints        Int      @default(0)
  timeOnSiteSeconds Int      @default(0)
  camTimeSeconds    Int      @default(0)
  messagesSent      Int      @default(0)
  emotesGiven       Int      @default(0)
  emotesReceived    Int      @default(0)
  
  updatedAt         DateTime @updatedAt
  
  @@index([chatPoints])
}

// ============================================
// Enums
// ============================================

enum Role {
  USER
  MODERATOR
  ADMIN
}

// ============================================
// Rooms (Multi-Room Support)
// ============================================

model Room {
  id          String   @id @default(cuid())
  name        String   @unique  // Display name (e.g., "General", "Gaming")
  slug        String   @unique  // URL-friendly slug (e.g., "general", "gaming")
  description String?  @db.Text
  ircChannel  String   @unique  // IRC channel name (e.g., "#camrooms-general")
  iconUrl     String?           // Room icon/avatar URL
  bannerUrl   String?           // Custom banner image for room cards

  // AI & Activity Metadata
  shortSummary      String?   @db.Text // AI-generated summary of current activity
  lastSummaryUpdate DateTime? // When the summary was generated
  activityScore     Int       @default(0) // 0-100 metric for animation intensity
  
  // Tube Persistence (Snapshot for browsing)
  currentVideoId    String?   // ID of currently playing video
  currentVideoTitle String?   // Title of currently playing video

  
  // Ownership & Stats
  creatorId   String?           // Discord user ID who created it (null for system rooms)
  memberCount Int      @default(0)  // Cached count for browsing
  isPublic    Boolean  @default(true)
  
  // Timestamps
  createdAt   DateTime @default(now())
  lastActive  DateTime @default(now())

  // Relations
  moderators  RoomModerator[]

  @@index([lastActive])
  @@index([memberCount])
}

model RoomModerator {
  id        String   @id @default(cuid())
  roomId    String
  userId    String   // Discord user ID
  role      RoomRole @default(MODERATOR)
  addedAt   DateTime @default(now())
  
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  
  @@unique([roomId, userId])
  @@index([roomId])
  @@index([userId])
}

enum RoomRole {
  OWNER
  MODERATOR
}

// ============================================
// Chat Messages (Persistent)
// ============================================

model ChatMessage {
  id          String   @id
  roomId      String
  sender      String
  text        String   @db.Text
  type        String   @default("user") // user, system
  systemType  String?  // join-leave, deploy-start, deploy-success, etc.
  metadata    Json?    // For bundling, commit info, etc.
  isWiped     Boolean  @default(false)  // Mod action: hidden from non-mods
  timestamp   DateTime @default(now())
  
  reactions   MessageReaction[]

  @@index([roomId, timestamp])
  @@index([systemType])
}

model MessageReaction {
  id        String      @id @default(cuid())
  messageId String
  userId    String
  emoji     String
  createdAt DateTime    @default(now())

  message   ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
  @@index([messageId])
}

// ============================================
// Core Systems: Moderation & Settings
// ============================================

model UserSettings {
  userId       String  @id // One-to-one with User, so we can use userId as PK
  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Preferences
  volume       Int     @default(100)
  autoDeafen   Boolean @default(false)
  hideMuted    Boolean @default(true)
  theme        String  @default("dark")
  
  // Privacy
  dmEnabled    Boolean @default(true)
  
  updatedAt    DateTime @updatedAt
}

model Block {
  blockerId String
  blockedId String
  createdAt DateTime @default(now())

  blocker   User     @relation("Blocks", fields: [blockerId], references: [id], onDelete: Cascade)
  blocked   User     @relation("BlockedBy", fields: [blockedId], references: [id], onDelete: Cascade)

  @@id([blockerId, blockedId])
  @@index([blockerId])
}

model Mute {
  muterId   String
  mutedId   String
  createdAt DateTime @default(now())

  muter     User     @relation("Mutes", fields: [muterId], references: [id], onDelete: Cascade)
  muted     User     @relation("MutedBy", fields: [mutedId], references: [id], onDelete: Cascade)

  @@id([muterId, mutedId]) // Composite ID for mutes too
  @@index([muterId])
}

model AuditLog {
  id          String   @id @default(cuid())
  action      String   // BAN, KICK, PROMOTE, DEMOTE, SYSTEM_UPDATE
  targetId    String?
  actorId     String?  // Admin/Mod who performed the action
  details     Json?    // Reason, metadata
  ipAddress   String?
  createdAt   DateTime @default(now())

  @@index([action])
  @@index([targetId])
}
